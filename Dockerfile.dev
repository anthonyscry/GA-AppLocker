FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    wget apt-transport-https software-properties-common ca-certificates git \
 && wget -q https://packages.microsoft.com/config/ubuntu/22.04/packages-microsoft-prod.deb \
 && dpkg -i packages-microsoft-prod.deb \
 && apt-get update \
 && apt-get install -y powershell \
 && rm -rf /var/lib/apt/lists/*

# Install Pester so Invoke-Pester exists
RUN pwsh -NoLogo -NoProfile -Command \
    "Set-PSRepository -Name PSGallery -InstallationPolicy Trusted; \
     Install-Module Pester -Force -Scope AllUsers; \
     Import-Module Pester; \
     Get-Module Pester -ListAvailable | Select-Object -First 1 Name,Version"

WORKDIR /oc_workspace
